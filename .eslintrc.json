{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "semi": ["error", "always"],
    "max-len": ["error", { "code": 120 }],
    "quotes": ["error", "single"],
    "eol-last": ["error", "always"]
  }
}
